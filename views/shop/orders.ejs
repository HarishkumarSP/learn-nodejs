<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <% if(orders.length <=0){ %>
    <h1>Nothing there!</h1>
    <% } else { %>
        <ul>
    <% orders.forEach(order => { %>
      <h1> #<%= order._id %> - <a href='orders/<%= order._id %>'> Invoice</a> </h1>
      <% order.products.forEach(product => { %>
      <ul>
        <li>
          <%= product.product.title %>(<%= product.quantity %>)
        </li>
      </ul>
      <% }); %>
      <% }) %>
    </ul>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>